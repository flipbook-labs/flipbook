{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install packages",
      "type": "shell",
      "problemMatcher": [],
      "command": "lune",
      "args": ["run", "wally-install"]
    },
    {
      "label": "Build (Development)",
      "type": "shell",
      "problemMatcher": [],
      "command": "lune",
      "args": ["run", "build", "--target", "dev"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build (Production)",
      "type": "shell",
      "problemMatcher": [],
      "command": "lune",
      "args": ["run", "build", "--target", "prod"],
      "group": {
        "kind": "build"
      }
    },
    {
      "label": "Build and watch",
      "type": "shell",
      "problemMatcher": [],
      "command": "lune",
      "args": ["run", "build", "--target", "dev", "--watch"]
    },
    {
      "label": "Serve docs",
      "type": "shell",
      "problemMatcher": [],
      "command": "lune",
      "args": ["run", "serve-docs"]
    }
  ]
}
