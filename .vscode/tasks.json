{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install packages",
      "type": "shell",
      "problemMatcher": [],
      "command": "lute",
      "args": ["scripts/install.luau"]
    },
    {
      "label": "Build (Development)",
      "type": "shell",
      "problemMatcher": [],
      "command": "lute",
      "args": ["scripts/build.luau", "plugin", "--channel", "dev"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build (Production)",
      "type": "shell",
      "problemMatcher": [],
      "command": "lute",
      "args": ["scripts/build.luau", "plugin", "--channel", "prod"],
      "group": {
        "kind": "build"
      }
    },
    {
      "label": "Build and watch",
      "type": "shell",
      "problemMatcher": [],
      "command": "lute",
      "args": ["scripts/build.luau", "plugin", "--channel", "dev", "--watch"]
    },
    {
      "label": "Serve docs",
      "type": "shell",
      "problemMatcher": [],
      "command": "lute",
      "args": ["scripts/serve-docs.luau"]
    }
  ]
}
